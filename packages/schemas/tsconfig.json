{
    "extends": "tsconfig/base.json",
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "lib",
        "node_modules",
        ".turbo"
    ],
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": "src",
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "outDir": "lib",
        "sourceMap": false,
        "declarationMap": false,
        "composite": true,
        "noEmit": false,
        "noImplicitAny": false
    }
}
